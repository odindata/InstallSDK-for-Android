<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:text="习式妙语：聆听中国"
        android:textColor="@color/colorAppName"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_item_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:text="置顶"
        android:textColor="@color/colorTop"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_item_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/tv_item_top"
        android:layout_toRightOf="@id/tv_item_top"
        android:text="专题"
        android:textColor="@color/colorOther"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/tv_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/tv_item_subject"
        android:layout_toRightOf="@id/tv_item_subject"
        android:text="89人浏览"
        android:textColor="@color/colorOther"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/img_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:src="@mipmap/odininstall"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />
</RelativeLayout>